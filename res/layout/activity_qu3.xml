<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/number3"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.majdzain.iq.Q3Activity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="426dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/q3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/bnfsg" />

        <ImageView
            android:id="@+id/image_number_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:src="@drawable/p2" />

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/image_number_question" >

            <RadioButton
                android:id="@+id/q3a"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/q3d"
                android:checked="true"
                android:text="A" />

            <RadioButton
                android:id="@+id/q3b"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/q3a"
                android:layout_below="@+id/q3a"
                android:layout_toLeftOf="@+id/q3e"
                android:text="B" />

            <RadioButton
                android:id="@+id/q3c"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/q3a"
                android:layout_below="@+id/q3b"
                android:layout_toLeftOf="@+id/q3f"
                android:text="C" />

            <RadioButton
                android:id="@+id/q3f"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/q3d"
                android:layout_below="@+id/q3b"
                android:text="F" />

            <RadioButton
                android:id="@+id/q3e"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/q3f"
                android:layout_alignLeft="@+id/q3d"
                android:text="E" />

            <RadioButton
                android:id="@+id/q3g"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="G" />

            <RadioButton
                android:id="@+id/q3h"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/q3f"
                android:layout_alignParentRight="true"
                android:text="H" />

            <RadioButton
                android:id="@+id/q3d"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/q3g"
                android:text="D" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RelativeLayout1"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/anse"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="إنسحاب"
                android:textColor="@color/yellow" />

            <Button
                android:id="@+id/nextq3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="@string/next"
                android:textColor="@color/red" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>