<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/number15"
    tools:context="com.majdzain.iq.Q15Activity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="445dp" >

        

        <TextView
            android:id="@+id/qtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/qu15"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/bnfsg" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/qtext2"
            
            android:text="@string/qo15"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue" />

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1" >

            <RadioButton
                android:id="@+id/q15b"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/q15c"
                android:layout_below="@+id/q15a"
                android:text="12 فئران" />

            <RadioButton
                android:id="@+id/q15c"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/q15a"
                android:layout_below="@+id/q15b"
                android:text="6 فئران" />

            <RadioButton
                android:id="@+id/q15a"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/q15d"
                android:checked="true"
                android:text="فئرا واحدا" />

            <RadioButton
                android:id="@+id/q15e"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/q15c"
                android:layout_toLeftOf="@+id/q15b"
                android:text="3 فئران" />

            <RadioButton
                android:id="@+id/q15f"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/q15e"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/q15e"
                android:text="فأرين اثنين" />

            <RadioButton
                android:id="@+id/q15d"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/q15e"
                android:layout_alignParentLeft="true"
                android:text="4 فئران" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RelativeLayout1"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/anse"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="إنسحاب"
                android:textColor="@color/yellow" />

            <Button
                android:id="@+id/nextq15"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="@string/next"
                android:textColor="@color/red" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
