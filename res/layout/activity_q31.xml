<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/number31"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.majdzain.iq.Q31Activity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/qu31"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/bnfsg" />

        <TextView
            android:id="@+id/qtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:text="@string/qo31"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue" />

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/qtext2" >

            <RadioButton
                android:id="@+id/q31a"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:checked="true"
                android:text="1100" />

            <RadioButton
                android:id="@+id/q31c"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/q31a"
                android:layout_alignRight="@+id/q31b"
                android:layout_below="@+id/q31b"
                android:layout_weight="1"
                android:text="1000" />

        <RadioButton
            android:id="@+id/q31e"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/q31d"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/q31d"
            android:text="1200" />

        <RadioButton
            android:id="@+id/q31b"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/q31a"
            android:layout_below="@+id/q31a"
            android:layout_weight="1"
            android:text="650" />

        <RadioButton
            android:id="@+id/q31d"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/q31b"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/q31a"
            android:text="900" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RelativeLayout1"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/anse"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="إنسحاب"
                android:textColor="@color/yellow" />

            <Button
                android:id="@+id/nextq31"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="@string/next"
                android:textColor="@color/red" />
        </LinearLayout>

       
    </RelativeLayout>

</ScrollView>